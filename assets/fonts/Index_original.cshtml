    ViewBag.Title = "Productos Arbell";
}
@section head{
    <script type="text/javascript" src="~/Scripts/inicio/inicio.js"></script>
    }
@Html.Action("BannersHome","Banners")
<div class="cajaGrisHome">
    
        <div class="inicioIzquierda">
            <div class="cajaProximosEventosHome">
                <h1 class="DINNextLTPro">PROXIMOS EVENTO</h1>
                <hr />
                <div class="eventosHome">
                    @Html.Action("EventosHome","Eventos")
                </div>
            </div>
            <br />
            <div class="cajaBellezaExteriorHome">
                <h1 class="DINNextLTPro">BELLEZA EXTERIOR</h1>
                <hr />
                @Html.Action("NotasSemanalesHome","NotasSemanales")
            </div>
        </div>
        <div class="inicioCentro">
            <div class="cajaCapacitacionesHome">
                <h1 class="DINNextLTPro">CAPACITACIONES</h1>
                <span class="cajaCapacitacionesHomeCirculo"></span>
                <hr />
