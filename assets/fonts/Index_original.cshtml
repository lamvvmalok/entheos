                    <h1 class="DINNextLTPro">DESCUENTOS!</h1>
                </div></a>
                
            </div>
            <div class="cajaNuevosProductosHome">
                <h1 class="DINNextLTPro">NUEVOS PRODUCTOS!</h1>
                <hr />
                @Html.Action("CatalogoHome","Catalogos")
                <div class="todosLosCatalogos">
                    <a  href="~/Catalogos" class="DINNextLTPro">Todos los catálogos</a>
                </div>
            </div>
        </div>
  
</div>



